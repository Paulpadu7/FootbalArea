<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:layout_goneMarginBottom="16dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/match_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/dinamo_vs_fcsb"/>

    <TextView
        android:id="@+id/matchName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/design_default_color_surface"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:text="Match1" />
    <TextView
        android:id="@+id/matchPrice"
        android:textAlignment="center"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="170dp"
        android:background="@color/design_default_color_surface"
        android:text="Price starts at: 10 lei">
    </TextView>
    <TextView
        android:id="@+id/match_location"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="140dp"
        android:textAlignment="center"
        android:text="Stadionul Dinamo">
    </TextView>
    <TextView
        android:id="@+id/matchDate"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="130dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:textSize="16dp"
        android:text="date" />

    <Button
        android:id="@+id/book_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="250dp"
        android:text="Book now!" />

    <TextView
        android:id="@+id/no_of_tickets"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginTop="150dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:paddingStart="8dp"
        android:textSize="16dp"
        android:textColor="@android:color/holo_green_dark"/>


</androidx.cardview.widget.CardView>